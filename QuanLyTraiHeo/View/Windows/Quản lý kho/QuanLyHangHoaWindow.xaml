                <Expander IsExpanded="True"
                                  Header="Loại hàng hoá"
                                  FontWeight="Bold"
                                  Background="White">
                    <ListView ItemsSource="{Binding listLoaiHangHoa}"
                                      Name="LVLoaiHangHoa"
                                      Margin="10">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding isSelected }"
                                                              Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, 
                                                                                                    AncestorType={x:Type ItemsControl}},
                                                                                                    Path= DataContext.TextTimKiemChangeCommand }">
                                            </CheckBox>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Loại hàng hoá "
                                                        DisplayMemberBinding="{Binding loaiHangHoa}" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Expander>
                <!--<Expander IsExpanded="True" Header="Tình trạng" FontWeight="Bold" Background="White">
