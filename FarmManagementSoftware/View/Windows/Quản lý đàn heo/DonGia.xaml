<Window x:Class="FarmManagementSoftware.View.Windows.Quản_lý_đàn_heo.DonGia"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:FarmManagementSoftware.View.Windows.Quản_lý_đàn_heo"
        mc:Ignorable="d"
        Title="DonGia" Height="215" Width="300">
    <Grid >
        <Button FontSize="16" Height="30"
                        Background="#00de1e"
                        materialDesign:ButtonAssist.CornerRadius="5" Content="Thêm giá" HorizontalAlignment="Center" Margin="0,120,0,0" VerticalAlignment="Top" Width="124" Click="Button_Click"/>
        <TextBox x:Name="txt_dongia" HorizontalAlignment="Center" Height="25" Margin="0,68,0,0" TextWrapping="Wrap"  materialDesign:HintAssist.Hint="Đơn giá" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" Width="204" PreviewTextInput="NumberValidationTextBox"/>
        <Label Name="label" Content="Đơn giá của heo: " HorizontalAlignment="Left" Margin="25,39,0,0" VerticalAlignment="Top" />

    </Grid>
</Window>
